{
  "name": "yoshi-monorepo",
  "private": true,
  "customPublish": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/yoshi.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "experimentalMonorepoPublish": true,
  "scripts": {
    "// local dev": "------------------------------------------------------------------------------------",
    "lint": "eslint . --ext js,ts --max-warnings 0",
    "build": "ts-node -T scripts/build.ts --force",
    "watch": "ts-node -T scripts/build.ts --watch",
    "create-yoshi-app:dev": "npm run dev --prefix ./packages/create-yoshi-app",
    "website:dev": "npm start --prefix './website'",
    "clean-build": "rm -rf ./packages/*/build ./packages/*/tsconfig.tsbuildinfo",
    "clean": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules && npm run clean-build",
    "// publishing": "-----------------------------------------------------------------------------------",
    "changelog": "lerna-changelog",
    "createVersion": "node scripts/createVersion",
    "manual-release": "ts-node scripts/release.ts",
    "bumpDocs": "npm run version --prefix './website' --",
    "test": ":",
    "// unit tests": "-----------------------------------------------------------------------------------",
    "test:unit": "jest --config='./jest.unit.config.js'",
    "// integration tests": "----------------------------------------------------------------------------",
    "test:integration:loaders:dev:js:fast": "npx jest ./test/javascript/features/loaders -t=dev",
    "test:integration:loaders:prod:js:fast": "npx jest ./test/javascript/features/loaders -t=prod",
    "test:integration:loaders:dev:ts:fast": "npx jest ./test/typescript/features/loaders -t=dev",
    "test:integration:loaders:prod:ts:fast": "npx jest ./test/typescript/features/loaders -t=prod",
    "test:integration:loaders:dev:js": "WITH_PUBLISH=true npx jest ./test/javascript/features/loaders -t=dev",
    "test:integration:loaders:prod:js": "WITH_PUBLISH=true npx jest ./test/javascript/features/loaders -t=prod",
    "test:integration:loaders:dev:ts": "WITH_PUBLISH=true npx jest ./test/typescript/features/loaders -t=dev",
    "test:integration:loaders:prod:ts": "WITH_PUBLISH=true npx jest ./test/typescript/features/loaders -t=prod",
    "test:integration:others:js:fast": "npx jest ./test/javascript --testPathIgnorePatterns=./test/javascript/features/loaders ./test/javascript/features/yoshi-server",
    "test:integration:others:js": "WITH_PUBLISH=true npx jest ./test/javascript --testPathIgnorePatterns=./test/javascript/features/loaders ./test/javascript/features/yoshi-server",
    "test:integration:others:ts:fast": "npx jest ./test/typescript --testPathIgnorePatterns=./test/typescript/features/loaders ./test/typescript/features/yoshi-server",
    "test:integration:others:ts": "WITH_PUBLISH=true npx jest ./test/typescript --testPathIgnorePatterns=./test/typescript/features/loaders ./test/typescript/features/yoshi-server",
    "test:integration:yoshiServer:js:fast": "npx jest ./test/javascript/features/yoshi-server",
    "test:integration:yoshiServer:js": "WITH_PUBLISH=true npx jest ./test/javascript/features/yoshi-server",
    "test:integration:yoshiServer:ts:fast": "npx jest ./test/typescript/features/yoshi-server",
    "test:integration:yoshiServer:ts": "WITH_PUBLISH=true npx jest ./test/typescript/features/yoshi-server",
    "// template tests": "-------------------------------------------------------------------------------",
    "test:templates:client": "npm run client --prefix ./packages/create-yoshi-app",
    "test:templates:fullstack": "npm run fullstack --prefix ./packages/create-yoshi-app",
    "test:templates:server": "npm run server --prefix ./packages/create-yoshi-app",
    "test:templates:library": "npm run library --prefix ./packages/create-yoshi-app",
    "test:templates:flow-library": "npm run flow-library --prefix ./packages/create-yoshi-app",
    "test:templates:bm": "npm run bm --prefix ./packages/create-yoshi-app",
    "test:templates:flow-bm": "npm run flow-bm --prefix ./packages/create-yoshi-app",
    "test:templates:flow-editor:ooi": "npm run flow-editor:ooi --prefix ./packages/create-yoshi-app",
    "test:templates:flow-editor:platform": "npm run flow-editor:platform --prefix ./packages/create-yoshi-app",
    "// legacy tests": "---------------------------------------------------------------------------------",
    "test:legacy": "npm run test --prefix ./packages/yoshi-flow-legacy",
    "test:legacy:build": "npm run test:build --prefix ./packages/yoshi-flow-legacy",
    "test:legacy:start": "npm run test:start --prefix ./packages/yoshi-flow-legacy",
    "test:legacy:test": "npm run test:test --prefix ./packages/yoshi-flow-legacy",
    "test:legacy:others": "npm run test:others --prefix ./packages/yoshi-flow-legacy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "node scripts/post-merge"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --ext js,ts --max-warnings 0",
    "*.md": "prettier --write"
  },
  "devDependencies": {
    "@lerna/project": "3.21.0",
    "@stylable/runtime": "3.8.1",
    "@types/async-retry": "1.4.2",
    "@types/expect-puppeteer": "4.4.3",
    "@types/fs-extra": "9.0.1",
    "@types/is-ci": "2.0.0",
    "@types/jest": "24.9.1",
    "@types/jest-environment-puppeteer": "4.3.1",
    "@types/lodash": "4.14.157",
    "@types/puppeteer": "1.20.6",
    "@types/rimraf": "3.0.0",
    "@types/semver": "7.3.1",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "async-retry": "1.3.1",
    "axios": "0.19.2",
    "babel-eslint": "10.1.0",
    "boxen": "4.2.0",
    "chai": "4.2.0",
    "chalk": "2.4.2",
    "changelog-prepend": "1.7.0",
    "chokidar": "3.4.1",
    "cross-spawn": "6.0.5",
    "eslint": "6.8.0",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.16.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-react-hooks": "2.5.1",
    "eslint-plugin-wix-style-react": "1.0.412",
    "execa": "3.4.0",
    "expect": "24.9.0",
    "express": "4.17.1",
    "fs-extra": "9.0.1",
    "glob": "7.1.6",
    "globby": "9.2.0",
    "husky": "4.2.5",
    "is-ci": "2.0.0",
    "jest": "24.9.0",
    "jest-environment-puppeteer": "3.9.1",
    "jest-puppeteer": "4.4.0",
    "jest-runner": "24.9.0",
    "jest-teamcity": "1.7.0",
    "lerna": "3.22.1",
    "lerna-changelog": "1.0.1",
    "lint-staged": "10.2.11",
    "lodash": "4.17.19",
    "minimist": "1.2.5",
    "mocha": "5.2.0",
    "mocha-env-reporter": "3.0.2",
    "mocha-teamcity-reporter": "2.5.2",
    "multimatch": "4.0.0",
    "node-fetch": "2.6.0",
    "prettier": "2.0.5",
    "prompts": "0.1.14",
    "puppeteer": "1.20.0",
    "react": "16.13.1",
    "retry-promise": "1.0.0",
    "rimraf": "3.0.2",
    "semver": "7.3.2",
    "serve": "10.1.2",
    "shelljs": "0.8.4",
    "string-length": "3.1.0",
    "strip-ansi": "4.0.0",
    "tempy": "0.6.0",
    "terminate": "2.1.2",
    "ts-jest": "24.3.0",
    "ts-node": "8.10.2",
    "tslint": "5.20.1",
    "tslint-plugin-wix-style-react": "1.0.8",
    "tslint-react-hooks": "2.2.2",
    "type-fest": "0.16.0",
    "typescript": "3.9.7",
    "verdaccio": "4.7.1",
    "vfile-message": "2.0.4",
    "wait-for-expect": "1.3.0",
    "wait-port": "0.2.9",
    "wix-eventually": "2.3.0"
  },
  "resolutions": {
    "@types/node": "^12.0.0",
    "**/@types/i18next": "8.4.5"
  },
  "publishConfig": {
    "registry": "http://npm.dev.wixpress.com/"
  }
}
